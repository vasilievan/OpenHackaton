<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/text_from_recognition1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/data_field"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/text_from_recognition2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_from_recognition1"
            android:layout_marginTop="43dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/data_field"
    />

    <ImageButton android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:scaleType="fitCenter"
                 android:id="@+id/btn_positive"
                 android:src="@drawable/apply"
                 android:background="@android:color/transparent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginBottom="10dp"
                 android:layout_marginEnd="10dp"
                 android:onClick="apply"
    />

    <ImageButton android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:scaleType="fitCenter"
                 android:id="@+id/btn_negative"
                 android:src="@drawable/close"
                 android:background="@android:color/transparent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginBottom="10dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="5dp"
                 android:onClick="close"
    />
    <ImageButton android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:scaleType="fitCenter"
                 android:id="@+id/btn_back"
                 android:src="@drawable/back"
                 android:background="@android:color/transparent"
                 app:layout_constraintLeft_toRightOf="@id/btn_negative"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginBottom="10dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="5dp"
                 android:onClick="takeAPhoto"
    />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>